---
import { ClientRouter } from "astro:transitions";
import Analytics from "@vercel/analytics/astro";
import { Github, Mail, Youtube } from "@lucide/astro";

import "../styles/global.css";

const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta charset="UTF-8" />
    <meta name="description" content="My little nook in the internet." />
    <meta name="generator" content={Astro.generator} />
    <meta name="viewport" content="width=device-width" />
    <meta property="og:description" content="My little nook in the internet." />
    <meta property="og:image" content="https://rafaelnegron.me/logo.svg" />
    <meta property="og:title" content="Rafael Negron" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://www.rafaelnegron.me/" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:description"
      content="My little nook in the internet."
    />
    <meta property="twitter:domain" content="rafaelnegron.me" />
    <meta name="twitter:image" content="https://rafaelnegron.me/logo.svg" />
    <meta name="twitter:title" content="Rafael Negron" />
    <meta property="twitter:url" content="https://www.rafaelnegron.me/" />
    <title>Rafael Negron</title>
  </head>
  <body
    class="m-0 w-full h-full container mx-auto p-4 flex flex-col items-center"
  >
    <header>
      <img
        alt="An anime-esque style drawing of a desk with a laptop on it."
        class="mx-auto"
        height="300"
        src="https://rafaelnegron.me/logo.svg"
        width="300"
      />
      <nav class="w-full border-b border-gray-100 bg-gray-50">
        <ul
          class="max-w-5xl mx-auto flex flex-col sm:flex-row items-center justify-center sm:justify-start gap-6 sm:gap-10 px-4 py-5 text-sm font-medium tracking-wide uppercase text-gray-700"
        >
          <li>
            <a
              href="/"
              class={`border-b-2 border-transparent pb-1 transition-all hover:border-blue-500 hover:text-blue-600 ${
                currentPath === "/" ? "text-blue-700 border-blue-700" : ""
              }`}
            >
              Home
            </a>
          </li>
          <li>
            <a
              href="/guide"
              class={`border-b-2 border-transparent pb-1 transition-all hover:border-blue-500 hover:text-blue-600 ${
                currentPath.includes("guide")
                  ? "text-blue-700 border-blue-700"
                  : ""
              }`}
            >
              Career Survival Guide
            </a>
          </li>
        </ul>
      </nav>
    </header>
    <slot />
    <footer class="mt-8 flex gap-4 items-center">
      <p>&copy; 2025 Rafael Negron</p>
      <div class="flex gap-2">
        <a
          href="https://www.youtube.com/@negronarafael"
          rel="noopener noreferrer"
          target="_blank"><Youtube /></a
        >
        <a
          href="https://github.com/User5842"
          rel="noopener noreferrer"
          target="_blank"><Github /></a
        >
        <a
          href="mailto:negron.a.rafael@gmail.com"
          rel="noopener noreferrer"
          target="_blank"><Mail /></a
        >
      </div>
    </footer>
    <Analytics />
  </body>
</html>

<ClientRouter />
