---
import { ClientRouter } from "astro:transitions";
import Analytics from "@vercel/analytics/astro";

import "../styles/global.css";

const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:title" content="Rafael Negron" />
    <meta property="og:type" content="blog" />
    <meta property="og:description" content="My little nook in the internet." />
    <meta property="og:image" content="https://rafaelnegron.me/logo.svg" />
    <meta property="og:url" content="https://rafaelnegron.me/" />
    <meta name="twitter:card" content="summary_large_image" />
    <title>Rafael Negron</title>
  </head>
  <body
    class="m-0 w-full h-full container mx-auto p-4 flex flex-col items-center"
  >
    <header>
      <img
        alt="An anime-esque style drawing of a desk with a laptop on it."
        class="mx-auto"
        height="300"
        src="https://rafaelnegron.me/logo.svg"
        width="300"
      />
      <nav class="w-full border-b border-gray-200 bg-white">
        <ul
          class="max-w-5xl mx-auto flex flex-col sm:flex-row items-center justify-center sm:justify-start gap-4 sm:gap-8 px-4 py-4 text-lg"
        >
          <li>
            <a
              href="/"
              class={`transition-colors hover:text-blue-600 ${currentPath === "/" ? "font-semibold text-blue-700 underline" : "text-gray-700"}`}
            >
              Home
            </a>
          </li>
          <li>
            <a
              href="/guide"
              class={`transition-colors hover:text-blue-600 ${currentPath.includes("guide") ? "font-semibold text-blue-700 underline" : "text-gray-700"}`}
            >
              Declassified Career Survival Guide
            </a>
          </li>
        </ul>
      </nav>
    </header>
    <slot />
    <footer class="mt-8">
      <p>&copy; 2025 Rafael Negron</p>
    </footer>
    <Analytics />
  </body>
</html>

<ClientRouter />
