---
import { ArrowLeft } from "@lucide/astro";

import AnnualWithdrawal from "../../components/FourPercentCalculators/AnnualWithdrawal";
import TargetPortfolio from "../../components/FourPercentCalculators/TargetPortfolio";
import "../../styles/global.css";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <title>4% Retirement Calculators</title>
  </head>
  <body class="bg-gray-50 text-gray-800">
    <main
      class="container mx-auto px-4 py-16 flex flex-col items-center text-center"
    >
      <a
        aria-label="Back to home"
        class="self-start text-gray-600 hover:text-gray-900 transition-colors duration-300 mb-6"
        href="/"
      >
        <ArrowLeft class="w-6 h-6 sm:w-7 sm:h-7" />
      </a>
      <h1
        class="mt-6 font-extrabold tracking-tight text-gray-900 text-3xl sm:text-4xl md:text-5xl"
      >
        4% Retirement Calculators
      </h1>
      <p class="mt-2 text-gray-600 max-w-md text-base sm:text-lg md:text-xl">
        Simple tools to help you estimate safe withdrawal rates, project future
        income, and plan a sustainable retirement strategy.
      </p>
      <section class="mt-10 w-full max-w-3xl flex flex-col items-center gap-8">
        <AnnualWithdrawal client:load />
        <TargetPortfolio client:load />
      </section>
    </main>
  </body>
</html>
