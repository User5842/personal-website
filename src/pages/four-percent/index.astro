---
import AnnualWithdrawal from "../../components/FourPercentCalculators/AnnualWithdrawal";

import "../../styles/global.css";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>4% Retirement Calculators</title>
  </head>
  <body class="bg-gray-50 text-gray-800">
    <main
      class="container mx-auto px-4 py-16 flex flex-col items-center text-center"
    >
      <h1
        class="mt-6 font-extrabold tracking-tight text-gray-900 text-3xl sm:text-4xl md:text-5xl"
      >
        4% Retirement Calculators
      </h1>
      <p class="mt-2 text-gray-600 max-w-md text-base sm:text-lg md:text-xl">
        Simple tools to help you estimate safe withdrawal rates, project future
        income, and plan a sustainable retirement strategy.
      </p>
      <section class="mt-10 w-full max-w-3xl flex flex-col items-center">
        <AnnualWithdrawal client:load />
      </section>
    </main>
  </body>
</html>
